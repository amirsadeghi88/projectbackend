generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Pet {
  id          String           @id @default(cuid())
  name        String
  species     String
  breed       String?
  age         Int
  appointments Appointment[]
}

model Appointment {
  id      String    @id @default(cuid())
  date    DateTime  @default(now())
  vet     String
  notes   String?
  petId   String
  pet     Pet    @relation(fields: [petId], references: [id])
}